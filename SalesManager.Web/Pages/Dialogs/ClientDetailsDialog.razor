@inherits ClientDetailsDialogBase
@attribute [Authorize]

<MudDialog>
    <DialogContent>
        <MudGrid Justify="Justify.Center" Spacing="1">
            <MudItem xs="2">
                <MudField Label="Id" Variant="Variant.Outlined">@ClientGetDTO.Id</MudField>
            </MudItem>
            <MudItem xs="5">
                <MudField Label="Email" Variant="Variant.Outlined">@ClientGetDTO.ClientEmail</MudField>
            </MudItem>
            <MudItem xs="5">
                <MudField Label="Data de criação" Variant="Variant.Outlined">@ClientGetDTO.CreatedAt</MudField>
            </MudItem>

            <MudItem xs="4">
                <MudField Label="CEP" Variant="Variant.Outlined">@ClientGetDTO.ClientCEP</MudField>
            </MudItem>
            <MudItem xs="4">
                <MudField Label="Estado" Variant="Variant.Outlined">@ClientGetDTO.ClientAddressState</MudField>
            </MudItem>
            <MudItem xs="4">
                <MudField Label="Cidade" Variant="Variant.Outlined">@ClientGetDTO.ClientAddressCity</MudField>
            </MudItem>
        </MudGrid>
    </DialogContent>
    <DialogActions>
        <MudButton OnClick="Cancel" Color="Color.Dark">Fechar</MudButton>
    </DialogActions>
</MudDialog>
